@model Online_Quiz_App.Models.Tbl_Category

@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1 style="text-align:center">AddCategory</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Cat_Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cat_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cat_Name, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div style="overflow:scroll">
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Room name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewData["List"] as List<Online_Quiz_App.Models.Tbl_Category>)
            {
                <tr>
                    <td>@item.Cat_ID</td>

                    <td>@item.Cat_Name</td>

                    <td>@item.cat_encrypted</td>

                    <td><a class="btn btn-info btn-sm" href="@Url.Action("ViewAllQuestions",new { id=item.Cat_ID})">View Questions of this Exam</a> </td>
                </tr>
            }

        </tbody>
    </table>
</div>